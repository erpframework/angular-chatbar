@require 'nib';

.jlo-chatbar {
	display: inline-block;
	box-sizing: border-box;
	height: 0px;
	line-height: 100vh; /*so that hidden open panel does not show over visible chat */
	bottom: 0;

	&__chat {
		position: relative;
		bottom: 100vh;
		
		display: inline-block;
		vertical-align: bottom;
	}

	&__minimized,
	&__open {
		box-sizing: border-box;
		bottom: 0;
		left: 0;
		width: 100%;
		overflow: hidden;
	}

	&__minimized {
		display: block;
	}
	&__open {
		display: none;
		transform: translateZ(0); /*to fix a redraw issue in firefox*/
	}

	&__chat--open &__open {
		display: block;
	}
	&__chat--open &__minimized {
		display: none;
	}

	&__resizer {
		width: 100%;
		height: 0;
		box-sizing: border-box;
	}

	&-noselect {
		user-select: none;
	}
}
